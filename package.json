{
  "name": "aria-attributes",
  "version": "1.3.0",
  "description": "List of ARIA attributes",
  "license": "MIT",
  "keywords": [
    "html",
    "aria",
    "attribute",
    "w3c"
  ],
  "repository": "wooorm/aria-attributes",
  "bugs": "https://github.com/wooorm/aria-attributes/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "main": "index.json",
  "files": [
    "index.json"
  ],
  "dependencies": {},
  "devDependencies": {
    "bail": "^1.0.1",
    "browserify": "^16.0.0",
    "concat-stream": "^1.6.0",
    "esmangle": "^1.0.0",
    "hast-util-select": "^2.0.0",
    "prettier": "^1.12.0",
    "rehype-parse": "^5.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.4.0",
    "unified": "^7.0.0",
    "xo": "^0.21.0"
  },
  "scripts": {
    "crawl": "node build",
    "format": "remark . -qfo && prettier --write '**/*.js' && xo --fix",
    "build-bundle": "browserify index.json -s ariaAttributes > aria-attributes.js",
    "build-mangle": "esmangle aria-attributes.js > aria-attributes.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test": "npm run crawl && npm run format && npm run build && npm run test-api"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "no-var": "off",
      "prefer-arrow-callback": "off"
    },
    "ignores": [
      "aria-attributes.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
